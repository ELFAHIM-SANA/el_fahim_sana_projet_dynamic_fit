<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/photologin"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="DYNAMIC FIT"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_color="#FAF8F8"
            app:civ_border_width="3dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="voir votre profil"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/activity"
            android:text="Activité"
            android:textSize="13dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/activite" />



        <Button
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/localisation"
            android:text="localisation"
            android:textSize="13dp"
            android:drawableTop="@drawable/local_24"
            android:textColor="@color/black"
            android:background="@android:color/transparent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <Button

            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/historique"
            android:text="historique des activités"
            android:drawableTop="@drawable/historiquee"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:layout_marginRight="25dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/deconnection"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:drawableTop="@drawable/deconnection"
            android:text="deconnection"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:background="@android:color/transparent" />
    </LinearLayout>

</LinearLayout>